<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<ul>
  <% for entry in @entries %>
    <li>
      <strong><%= entry["title"] %></strong><br>
      <%= entry["description"] %><br>
      <small>Occurred on: <%= entry["occurred_on"] %></small>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>


